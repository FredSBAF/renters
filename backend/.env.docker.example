# Copier en .env.docker et lancer depuis la racine : docker compose up
# Variables pour tourner le backend dans Docker (DB_HOST = nom du service MySQL)

# == SERVEUR ==
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001

# == BASE DE DONNÉES (service Docker = mysql) ==
DB_HOST=mysql
DB_PORT=3306
DB_NAME=renters
DB_USER=root
DB_PASSWORD=root

# == JWT (min 32 caractères) ==
JWT_SECRET=docker_jwt_secret_min_32_characters_long!!
JWT_EXPIRES_IN=86400
JWT_REFRESH_SECRET=docker_refresh_secret_32_chars_long!!!!
JWT_REFRESH_EXPIRES_IN=604800

# == AWS S3 (placeholders) ==
AWS_ACCESS_KEY_ID=docker
AWS_SECRET_ACCESS_KEY=docker
AWS_REGION=eu-west-3
AWS_S3_BUCKET=pouraccord-documents-dev

# == EMAIL ==
SENDGRID_API_KEY=SG.docker
EMAIL_FROM=noreply@pouraccord.com
EMAIL_FROM_NAME=PourAccord

# == 2FA TOTP (exactement 32 caractères) ==
TOTP_SECRET_ENCRYPTION_KEY=docker_totp_32_chars!!!!!!!!!!!!!!

# == STRIPE ==
STRIPE_SECRET_KEY=sk_test_docker
STRIPE_WEBHOOK_SECRET=whsec_docker

# == MICROSERVICE IA ==
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_SECRET=docker

# == RATE LIMITING ==
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
